@page
@model StreamSageWAD.Pages.AuthenticationModel
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("password");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }
    </script>
</head>

<body>
    <div class="d-flex flex-column justify-content-center align-items-center vh-100">
        <img src="./img/sage-transparent.png" alt="Stream Sage Logo" class="mb-4" width="100" height="100" />
        <h1 class="display-4 mb-4 text-white">Stream Sage</h1>
        <div class="card w-50">
            <div class="card-body">
                <h2 class="card-title text-center">Login</h2>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Username">Username:</label>
                        <input asp-for="Username" required class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password:</label>
                        <input asp-for="Password" required class="form-control" id="password" type="password" />
                        <input type="checkbox" onclick="togglePasswordVisibility()" class="mt-3">Show Password
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Login" class="btn btn-primary btn-block" />
                    </div>
                    <div>
                        <span asp-validation-summary="All" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
