@page
@model StreamSageWAD.Pages.RegisterModel

@{
    Layout = "_UnauthenticatedLayout";
    ViewData["Title"] = "Register";
}

<div class="container mt-5" style="font-size: 1.5rem;">
    <div class="text-center mb-5">
        <a href="/">
            <img src="~/img/sage-transparent.png" alt="StreamSage Logo" class="img-fluid" style="max-width: 400px;">
        </a>
    </div>

    <form method="post">
        <div class="form-group">
            <label for="registerUsername" style="font-size: 1.5rem;">Username</label>
            <input type="text" class="form-control" id="registerUsername" asp-for="registerDTO.Username" placeholder="Enter username" style="font-size: 1.5rem;">
        </div>
        <div class="form-group">
            <label for="registerEmail" style="font-size: 1.5rem;">Email</label>
            <input type="email" class="form-control" id="registerEmail" asp-for="registerDTO.Email" placeholder="Enter email" style="font-size: 1.5rem;">
        </div>
        <div class="form-group">
            <label for="registerPassword" style="font-size: 1.5rem;">Password</label>
            <input type="password" class="form-control" id="registerPassword" asp-for="registerDTO.Password" placeholder="Enter password" style="font-size: 1.5rem;">
        </div>
        <div class="form-group">
            <label for="registerConfirmPassword" style="font-size: 1.5rem;">Confirm Password</label>
            <input type="password" class="form-control" id="registerConfirmPassword" asp-for="registerDTO.RepeatPassword" placeholder="Confirm password" style="font-size: 1.5rem;">
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary" style="font-size: 1.75rem;padding: 15px 40px; margin-top:15px;">Register</button>
        </div>
        <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl ?? Url.Content(" ~ /")" />
    </form>

    <div class="text-center mt-4">
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="color: white">Have an account? Login</a>
    </div>

    <div class="mt-4">
        @if (!ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </div>
</div>
