@page
@model StreamSageWAD.Pages.LoginModel

@{
    Layout = "_UnauthenticatedLayout";
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="font-size: 1.5rem;">
    <div class="text-center mb-5">
        <a href="/">
            <img src="~/img/sage-transparent.png" alt="StreamSage Logo" class="img-fluid" style="max-width: 400px;">
        </a>
    </div>
    <!-- Green Positive Message -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success" role="alert">
            @Model.Message
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label for="loginUsername" style="font-size: 1.5rem;">Username</label>
            <input type="text" class="form-control" id="loginUsername" asp-for="loginDTO.Username" placeholder="Enter username" style="font-size: 1.5rem;">
        </div>
        <div class="form-group">
            <label for="loginPassword" style="font-size: 1.5rem;">Password</label>
            <input type="password" class="form-control" id="loginPassword" asp-for="loginDTO.Password" placeholder="Password" style="font-size: 1.5rem;">
        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="rememberMe" asp-for="loginDTO.IsRememberMe">
            <label class="form-check-label" for="rememberMe" style="font-size: 1.5rem;">Remember me</label>
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary" style="font-size: 1.75rem;padding: 15px 40px; margin-top:15px;">Login</button>
        </div>
        <input type="hidden" asp-for="ReturnUrl" />
    </form>

    <div class="text-center mt-4">
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: white">Need an account? Register</a>
    </div>
    <!-- Error messages -->
    <div class="mt-4">
        @if (!ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </div>
</div>
