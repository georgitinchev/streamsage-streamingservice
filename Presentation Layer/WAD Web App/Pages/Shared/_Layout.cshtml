<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/StreamSageWAD.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
</head>
<body>
	<header class="custom-navbar">
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
			<div class="container d-flex justify-content-between">
				<div>
					<ul class="navbar-nav">
						@if (!User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-page="/Login">
									<div class="d-flex flex-column align-items-center">
										<img src="~/img/loginBtn.png" alt="Login" width="20" height="20" />
										<span>Login</span>
									</div>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-page="/Register">
									<div class="d-flex flex-column align-items-center">
										<img src="~/img/register_btn.png" alt="Register" width="20" height="20" />
										<span>Register</span>
									</div>
								</a>
							</li>
						}
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-page="/Index">
								<div class="d-flex flex-column align-items-center">
									<img src="~/img/home_button.png" alt="Home" width="20" height="20" />
									<span>Home</span>
								</div>
							</a>
						</li>
						<li class="nav-item border-right pr-3">
							<a class="nav-link text-white" asp-area="" asp-page="/Library">
								<div class="d-flex flex-column align-items-center">
									<img src="~/img/movie-lib.png" alt="Library" width="20" height="20" />
									<span>Library</span>
								</div>
							</a>
						</li>
					</ul>
				</div>
				@if (Context.Request.Path.Value?.EndsWith("/Library") ?? false)
				{
					<div class="border-left border-right px-3 d-flex align-items-center">
						<div class="row w-100">
							<div class="col pr-2">
								<input class="form-control" type="search" placeholder="Search" aria-label="Search">
							</div>
							<div class="col-auto pl-0">
								<img src="~/img/search-icon.png" alt="Search" class="search-icon" style="cursor: pointer;">
							</div>
						</div>
					</div>
				}

				<div>
					<ul class="navbar-nav">
						<li class="nav-item border-right pr-3">
							<a class="nav-link text-white" asp-area="" asp-page="/Leaderboards">
								<div class="d-flex flex-column align-items-center">
									<img src="~/img/imdb-transparent.png" alt="Leaderboards" width="20" height="20" />
									<span>Leaderboards</span>
								</div>
							</a>
						</li>
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-page="/Profile">
									<div class="d-flex flex-column align-items-center">
										<img src="~/img/user_button.png" alt="Profile" width="20" height="20" />
										<span>Profile</span>
									</div>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-page="/Settings">
									<div class="d-flex flex-column align-items-center">
										<img src="~/img/settings_icon.png" alt="Settings" width="20" height="20" />
										<span>Settings</span>
									</div>
								</a>
							</li>
							<li class="nav-item">
								<form method="post" asp-page="/Logout">
									<button type="submit" class="nav-link btn btn-link text-white">
										<div class="d-flex flex-column align-items-center">
											<img src="https://static-00.iconduck.com/assets.00/logout-icon-2048x2048-15cjmnbj.png" alt="Logout" width="20" height="20" />
											<span>Logout</span>
										</div>
									</button>
								</form>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - StreamSageWAD - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
